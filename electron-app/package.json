{
  "private": true,
  "name": "electron-app",
  "version": "0.0.0",
  "main": "lib/backend/electron-main.js",
  "license": "EPL-2.0 OR GPL-2.0 WITH Classpath-exception-2.0",
  "author": "Shchepukhin Denis <shepuhin@yandex.ru>",
  "homepage": "https://github.com/Pe3aTeJlb/gestola",
  "dependencies": {
    "@theia/core": "latest",
    "@theia/editor": "latest",
    "@theia/electron": "latest",
    "@theia/filesystem": "latest",
    "@theia/markers": "latest",
    "@theia/messages": "latest",
    "@theia/monaco": "latest",
    "@theia/navigator": "latest",
    "@theia/preferences": "latest",
    "@theia/process": "latest",
    "@theia/terminal": "latest",
    "@theia/workspace": "latest",
    "@theia/vsx-registry": "latest",
    "@gestola/core": "0.0.0",
    "@gestola/explorer": "0.0.0"
  },
  "devDependencies": {
    "@theia/cli": "latest",
    "@types/yargs": "17.0.7",
    "electron": "^23.2.4",
    "electron-builder": "23.6.0",
    "yargs": "17.2.1",
    "app-builder-lib": "22.10.5"
  },
  "scripts": {

    "package": "yarn build && electron-builder -c.mac.identity=null --publish never",
    "package:fast": "electron-builder -c.mac.identity=null --publish never",

    "build": "yarn clean && yarn compile && theia rebuild:electron && theia build --mode development",
    "compile": "tsc -b",
    "bundle": "yarn rebuild && theia build --mode development",
    "rebuild": "theia rebuild:electron --cacheRoot ..",
    "start": "theia start",
    "clean": "rimraf webpack.config.js && rimraf gen-webpack.config.js && rimraf gen-webpack.node.config.js && rimraf src-gen && rimraf lib && rimraf dist && rimraf .browser_modules",
    "watch": "yarn rebuild && theia build --watch --mode development"
  },
  "theia": {
    "target": "electron"
  },
  "theiaPluginsDir": "../plugins"
}
