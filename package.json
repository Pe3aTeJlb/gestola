{
  "private": true,
  "engines": {
    "yarn": ">=1.7.0 <2",
    "node": ">=14.18.0"
  },
  "devDependencies": {
    "lerna": "2.4.0",
    "typescript": "~4.5.5"
  },

  "scripts": {

    "build:browser": "yarn --cwd browser-app bundle",
    "build:electron": "yarn --cwd electron-app bundle",

    "prepare": "lerna run prepare && yarn -s compile && yarn --cwd electron-app build",
    
    "compile": "echo Compiling TypeScript sources... && yarn clean:all && yarn compile:tsc",
    "compile:tsc": "tsc -b",
    
    "postinstall": "theia check:theia-version",
    "start:browser": "yarn --cwd browser-app start",
    "start:electron": "yarn --cwd electron-app start",
    "watch:browser": "lerna run --parallel watch --ignore electron-app",
    "watch:electron": "lerna run --parallel watch --ignore browser-app",
    "download:plugins": "theia download:plugins",

    "clean:all": "yarn clean:core && yarn clean:explorer",
    "clean:core": "yarn --cwd packages/core clean",
    "clean:explorer": "yarn --cwd packages/explorer clean",
    
    "rebuild:all": "yarn rebuild:core && yarn rebuild:explorer",
    "rebuild:core": "yarn --cwd packages/core rebuild",
    "rebuild:explorer": "yarn --cwd packages/explorer rebuild",

    "debug": "yarn rebuild:all && yarn --cwd electron-app rebuild && yarn --cwd electron-app start"

  },
  "workspaces": [
    "packages/*", "browser-app", "electron-app"
  ],
  "theiaPluginsDir": "plugins",
  "theiaPlugins": {
    "MS-CEINTL.vscode-language-pack-ru": "https://open-vsx.org/api/MS-CEINTL/vscode-language-pack-ru/1.85.0/file/MS-CEINTL.vscode-language-pack-ru-1.85.0.vsix"
  }
}
