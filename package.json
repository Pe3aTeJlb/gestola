  "homepage": "https://github.com/Pe3aTeJlb/gestola",
  "bugs": {
    "url": "https://github.com/Pe3aTeJlb/gestola"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Pe3aTeJlb/gestola.git"
  },
  "engines": {
    "yarn": ">=1.7.0 <2",
    "node": ">=14.18.0"
  },
  "dependencies": {
    "remove-files-webpack-plugin": "^1.5.0"
  },
  "devDependencies": {
    "lerna": "2.4.0",
    "typescript": "latest",
    "ts-node": "^10.0.0",
    "axios": "1.6.7"
  },

  "scripts": {

    "setup": "yarn install --ignore-workspace-root-check && yarn update:dependencies && yarn update:plugins && yarn && yarn download:plugins && yarn build",
    "prepare": "lerna run prepare",
    "update:dependencies": "ts-node scripts/update-theia-version.ts 1.53.0 && lerna run update:next 1.53.0",
    "update:plugins": "ts-node scripts/plugin-update.ts",
    "download:plugins": "rimraf ./plugins && theia download:plugins",
    "build": "yarn -s compile && yarn --cwd electron-app build:test",
    
    "compile": "echo Compiling TypeScript sources... && yarn clean:all && yarn compile:tsc",
    "compile:tsc": "tsc -b",
    
    "postinstall": "theia check:theia-version",
    "start:electron": "yarn --cwd electron-app start",
    "watch:electron": "lerna run --parallel watch --ignore electron-app",

    "package:prod": "yarn --cwd electron-app package:prod",
    "package:test": "yarn --cwd electron-app package:test",
    "package:fast": "yarn --cwd electron-app package:fast",

    "clean:electron": "yarn --cwd electron-app clean",
    "clean:all": "yarn clean:launcher && yarn clean:project-manager && yarn clean:explorer && yarn clean:branding",
    "clean:launcher": "yarn --cwd packages/launcher clean",
    "clean:project-manager": "yarn --cwd packages/project-manager clean",
    "clean:explorer": "yarn --cwd packages/explorer clean",
    "clean:branding": "yarn --cwd packages/branding clean",
    
    "clean:node-modules": "rimraf .electron-app/node_modules && rimraf node_modules",
    
    "rebuild:electron": "yarn --cwd electron-app rebuild",
    "rebuild:all": "yarn rebuild:launcher && yarn rebuild:project-manager && yarn rebuild:explorer && yarn rebuild:branding",
    "rebuild:launcher": "yarn --cwd packages/launcher rebuild",
    "rebuild:project-manager": "yarn --cwd packages/project-manager rebuild",
    "rebuild:explorer": "yarn --cwd packages/explorer rebuild",
    "rebuild:branding": "yarn --cwd packages/branding rebuild",

    "debug": "yarn rebuild:all && yarn --cwd electron-app bundle && yarn --cwd electron-app start"
  },
  "workspaces": [
    "packages/*", "electron-app"
  ],
  "theiaPluginsDir": "plugins",
  "theiaPlugins": {
    "llvm-vs-code-extensions.vscode-clangd": "https://open-vsx.org/api/llvm-vs-code-extensions/vscode-clangd/0.1.29/file/llvm-vs-code-extensions.vscode-clangd-0.1.29.vsix",
    "eclipse-cdt.cdt-gdb-vscode": "https://open-vsx.org/api/eclipse-cdt/cdt-gdb-vscode/0.0.108/file/eclipse-cdt.cdt-gdb-vscode-0.0.108.vsix",
    "eclipse-cdt.cdtcloud-clangd-contexts": "https://github.com/eclipse-cdt-cloud/clangd-contexts/releases/download/v0.8.0/cdtcloud-clangd-contexts-ext-0.8.0.vsix",
    "ms-vscode.cmake-tools": "https://open-vsx.org/api/ms-vscode/cmake-tools/1.19.51/file/ms-vscode.cmake-tools-1.19.51.vsix",
    "vscode.cpp": "https://open-vsx.org/api/vscode/cpp/1.88.1/file/vscode.cpp-1.88.1.vsix",
    "eclipse-theia.builtin-extension-pack": "https://open-vsx.org/api/eclipse-theia/builtin-extension-pack/1.88.1/file/eclipse-theia.builtin-extension-pack-1.88.1.vsix",
    "EditorConfig.EditorConfig": "https://open-vsx.org/api/EditorConfig/EditorConfig/0.16.6/file/EditorConfig.EditorConfig-0.16.6.vsix",
    "dbaeumer.vscode-eslint": "https://open-vsx.org/api/dbaeumer/vscode-eslint/3.0.10/file/dbaeumer.vscode-eslint-3.0.10.vsix",
    "ms-vscode.js-debug": "https://open-vsx.org/api/ms-vscode/js-debug/1.93.0/file/ms-vscode.js-debug-1.93.0.vsix",
    "ms-vscode.js-debug-companion": "https://open-vsx.org/api/ms-vscode/js-debug-companion/1.1.3/file/ms-vscode.js-debug-companion-1.1.3.vsix",
    "ms-azuretools.vscode-docker": "https://open-vsx.org/api/ms-azuretools/vscode-docker/1.29.2/file/ms-azuretools.vscode-docker-1.29.2.vsix",
    "MS-CEINTL.vscode-language-pack-ru": "https://open-vsx.org/api/MS-CEINTL/vscode-language-pack-ru/1.94.0/file/MS-CEINTL.vscode-language-pack-ru-1.94.0.vsix"
  },
  "theiaPluginsExcludeIds": [
    "ms-vscode.js-debug-companion",
    "VisualStudioExptTeam.vscodeintellicode",
    "vscode.builtin-notebook-renderers",
    "vscode.extension-editing",
    "vscode.github",
    "vscode.github-authentication",
    "vscode.ipynb",
    "vscode.microsoft-authentication"
  ]
}
